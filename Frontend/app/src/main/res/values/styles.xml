<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles pour les TextInputLayout -->
    <style name="ModernTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/accent_color</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="startIconTint">@color/accent_color</item>
        <item name="endIconTint">@color/accent_color</item>
    </style>

    <!-- Style pour les boutons -->
    <style name="ModernButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:backgroundTint">@color/accent_color</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Style pour les textes de titre -->
    <style name="TitleTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style pour les textes de liens -->
    <style name="LinkTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>